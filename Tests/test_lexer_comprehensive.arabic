برنامج اختبار_المحلل_اللغوي ؛
    ثابت
        الحد_الأقصى = 100 ؛
        الاسم = "أحمد" ؛
    نوع
        الشخص = سجل {
            الاسم : خيط_رمزي ؛
            العمر : صحيح
        } ؛
    متغير
        س : صحيح ؛
        ص : حقيقي ؛
        نص : خيط_رمزي ؛
        منطقي : منطقي ؛
        أرقام : قائمة[5] من صحيح ؛
        موظف : الشخص ؛
    إجراء الجمع (بالقيمة أ : صحيح ؛ بالقيمة ب : صحيح) ؛
        متغير
            النتيجة : صحيح ؛
        النتيجة = أ + ب ؛
        اطبع النتيجة ؛
    نهاية ؛
    س = 10 ؛
    ص = 3.14 ؛
    نص = "مرحبا" ؛
    منطقي = صح ؛
    أرقام[0] = 5 ؛
    موظف.الاسم = "علي" ؛
    اذا (س > 5) فان
        اطبع "كبير" ؛
    والا
        اطبع "صغير" ؛
    نهاية ؛
    طالما (س <= 20) فان
        اطبع س ؛
        س = س + 1 ؛
    نهاية ؛
    كرر (ع = 1 الى 5)
        اطبع ع ؛
    نهاية ؛
    اعد
        اطبع "تكرار" ؛
    حتى (خطأ) ؛
    الجمع(3 ، 7) ؛
