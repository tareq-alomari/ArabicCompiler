// اختبار القاعدة 10: التعبيرات
// Test Rule 10: Expressions
// <تعبير> : <تعبير بسيط> [ <معامل_ربط> <تعبير بسيط> ]
// <معامل_ربط> : => | < | > | =< | == | =!

برنامج اختبار_التعبيرات ؛

متغير أ : صحيح ؛
متغير ب : صحيح ؛
متغير ج : حقيقي ؛
متغير د : حقيقي ؛

أ = 10 ؛
ب = 20 ؛
ج = 3.5 ؛
د = 2.5 ؛

// تعبيرات حسابية
اطبع "أ + ب = " ؛
اطبع أ + ب ؛

اطبع "أ - ب = " ؛
اطبع أ - ب ؛

اطبع "أ * ب = " ؛
اطبع أ * ب ؛

اطبع "ب / أ = " ؛
اطبع ب / أ ؛

اطبع "ب % أ = " ؛
اطبع ب % أ ؛

// تعبيرات مقارنة
اطبع "أ > ب: " ؛
اطبع أ > ب ؛

اطبع "أ < ب: " ؛
اطبع أ < ب ؛

اطبع "أ == أ: " ؛
اطبع أ == أ ؛

اطبع "أ != ب: " ؛
اطبع أ != ب ؛

// تعبيرات منطقية
اطبع "(أ > 5) && (ب > 15): " ؛
اطبع (أ > 5) && (ب > 15) ؛

اطبع "(أ > 15) || (ب > 15): " ؛
اطبع (أ > 15) || (ب > 15) ؛

نهاية.

